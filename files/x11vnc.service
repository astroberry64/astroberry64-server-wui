[Unit]
Description=x11vnc VNC Server
After=display-manager.service network.target

[Service]
Type=simple
ExecStart=/usr/bin/x11vnc -display :0 -auth /var/run/lightdm/root/:0 -rfbauth /etc/x11vnc/passwd -forever -shared -rfbport 5900
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
